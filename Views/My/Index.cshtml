@model IEnumerable<MyModel> 

@{
    ViewData["Title"] = "Index";
}

<div class="container p-5">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-info">My mssql server table list</h2>
        </div>
        <div class="col-6 text-right">
