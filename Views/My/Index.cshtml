        </div>
    </div>
    <br />
    @if (Model.Count() > 0){
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        #id ‚ÑπÔ∏è
                    </th>
                    <th>
                        Name üé´
                    </th>
                    <th>
                        Price üí≤
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.name</td>
                        <td>@item.price BAM</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a class="btn btn-outline-primary mx-2" asp-route-id="@item.id" asp-controller="My" asp-action="Edit">
                                    Edit üìù</a>
                                <form method="post" asp-route-id="@item.id" asp-action="Delete">
                                     
                                    <input type="submit" class="btn btn-danger mx-2" value="Delete üóëÔ∏è"/>
                                
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-danger">Empty table!</p>
    }
</div>